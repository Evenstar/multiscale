%%
x=rand(50,50);
a=randn(5,5,2)/5;
[r,~,mv]=size(a);
v=zeros(size(x,1)+r-1,size(x,2)+r-1,mv);
for j=1:mv
    v(:,:,j)=conv2(rot90(a(:,:,j),2),x);
end
v=v+randn(size(v))*1;
b=randn(size(v));
d=randn(size(x));
tau=10;
eta=10;
L=50;

%%
x=double(imread('../data/barbara.png'))/255;
x=imresize(x,1/4);
a=randn(5,5,4)/sqrt(sum(a(:).^2));
[r,~,mv]=size(a);
v=zeros(size(x,1)+r-1,size(x,2)+r-1,mv);
v=inter_recv(x,a,v);
b=zeros(size(v));
d=zeros(size(x));
tau=1;
eta=5;
L=100;
%%
v=zeros(size(v));
b=zeros(size(b));
d=zeros(size(d));
%%
L=60;
[v,E]=bregman_update_coef_fista(x,a,v,b,d,tau,eta,L,100);
[a,W]=bregman_update_dict_frcg(x,a,v,b,d,tau,eta,100);
figure(1);
subplot(2,1,1);
plot(E);
subplot(2,1,2);
plot(W);
%%
x=double(imread('../data/barbara.png'))/255;
x=imresize(x,1/4);
tau=10;
eta=10;
v=zeros(size(v));
b=zeros(size(b));
d=zeros(size(d));
a=randn(5,5,4);
a=a/sqrt(sum(a(:).^2));
%%
tic
for k=1:500
    L=1000;
v=bregman_update_coef_fista(x,a,v,b,d,tau,eta,L,50);
a=bregman_update_dict_frcg(x,a,v,b,d,tau,eta,5);
%A=reshape(a,[r*r,mv]);
%a=a/sqrt(trace(A*A'));
b=b+inter_recv(x,a,v)-v;
d=d+inter_recx(x,a,v)-x;
%norm(v(:),1)
bregman_infeasibility_v(x,a,v)
bregman_infeasibility_x(x,a,v)
end
toc
bregman_infeasibility_lowfrequency(a)